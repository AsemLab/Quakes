<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="round_button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/white_circle</item>
        <item name="tint">@color/dark_blue</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">.5dp</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="details_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
        <item name="android:lines">1</item>
    </style>

    <style name="details_subtitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:autoSizeMinTextSize">8sp</item>
    </style>

    <style name="fragment_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/white_round_rectangle</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>